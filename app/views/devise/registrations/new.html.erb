<div class=" bg-gradient-primary min-vh-100">
  <div class="container">
    <div class=" row justify-content-center">
      <div class="col-md-9 col-lg-6 col-xl-6">
        <div class="card shadow-lg o-hidden border-0 my-5">
          <div class="card-body p-0">
            <div class="p-5">
              <div class="text-center">
                <h4 class="text-dark mb-4">Create a new account</h4>
              </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.text_field :user_name, autofocus: true, autocomplete: "Full name", placeholder: "Enter full name...", class: "form-control form-control-user" %>
                </div>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email Address...", class: "form-control form-control-user" %>
                </div>
                <div class="form-group">
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control form-control-user" %></div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "form-control form-control-user" %></div>
                <%= f.submit "Sign Up", class: "btn btn-primary btn-block text-white btn-user" %>
                <hr>
              <% end %>
              <div class="text-center"><%= render "devise/shared/links" %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
